<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_pool_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:text="@string/text_pool_name"
        android:textSize="20sp" >
    </TextView>

    <TextView
        android:id="@+id/text_pool_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:text="@string/text_pool_start"
        android:textSize="20sp" >
    </TextView>

    <TextView
        android:id="@+id/text_pool_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:text="@string/text_pool_finish"
        android:textSize="20sp" >
    </TextView>

    <TextView
        android:id="@+id/text_pool_membersNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:text="@string/text_pool_membersNo"
        android:textSize="20sp" >
    </TextView>

</LinearLayout>